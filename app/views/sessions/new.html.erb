<section>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= bootstrap_form_tag url: signin_path, html: { class: 'sign_in' } do |f| %>
        <header>
          <h3 class='text-center titles'>Sign in</h3>
        </header>

        <div class='form-group'>
          <label for="email" class="control-label col-md-3">Email Address</label>
          <div class='col-md-9'>
            <%= f.email_field :email, class: 'form-control', hide_label: true %>
          </div>
        </div>

        <div class='form-group'>
          <label class="control-label col-md-3">Password</label>
          <div class='col-md-9'>
            <%= f.password_field :password, class: 'form-control', hide_label: true %>
          </div>
        </div>


        <div class='form-group actions control-group'>
          <div class="row">
            <div class="col-md-1 col-md-offset-3">
              <%= f.submit "Sign in", class:'btn btn-success' %>
            </div>
            <div class="col-md-4 col-md-offset-4">
              <%= link_to "Forgot Password?", reset_password_path %><br>
              <%= link_to "Sign up for free!", signup_path %>
            </div>
          </div>
        </div>
    </div>
  </div>

      <% end %>
</section>
