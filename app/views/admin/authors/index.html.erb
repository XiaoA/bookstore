      <h3>No Authors Created</h3>
    <% else %>
      <h3>All Authors</h3>
  </header>
  <% @authors.each do |author| %>
    <%= link_to author.full_name, [:admin, author] %><hr>
  <% end %>
  <br>
    <% end %>
    <p><%= link_to 'Add New Author', new_admin_author_path, class: 'btn btn-primary' %></p>
</section>
