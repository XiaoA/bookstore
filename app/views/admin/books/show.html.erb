<section>
  <div class='row'>
    <div class='col-sm-12 cartless'>
      <header class='col-sm-12'>
        <h3 class='titles' id='book-show'><%= "#{@book.title}" %></h3>
      </header>
      <hr>
      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>ISBN:</strong>
        </div>
        <div class='col-sm-9'>
          <%= @book.isbn %>
        </div>
      </div>
      <div class='col-sm-12'>
      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Page count:</strong>
        </div>
        <div class='col-sm-9'>
          <%= @book.page_count %>
        </div>
      </div>
      <div class='col-sm-12'>
      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Price:</strong>
        </div>
        <div class='col-sm-9'>
          <%= number_to_currency(@book.price) %>
        </div>
      </div>
      <div class='col-sm-12'>

      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Description:</strong>
        </div>
        <div class='col-sm-9'>
          <%= @book.description %>
        </div>
      </div>
      <div class='col-sm-12'>

      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Publisher:</strong>
        </div>
        <div class='col-sm-9'>
          <%= @book.publisher_id %>
        </div>
      </div>
      <div class='col-sm-12'>

      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Published at:</strong>
        </div>
        <div class='col-sm-9'>
          <%= @book.published_at %>
        </div>
      </div>
      <div class='col-sm-12'>

      </div>

      <div class='col-sm-12'>
        <div class='col-sm-3'>
          <strong>Book cover:</strong>
        </div>

      </div>
      <div class='col-sm-12'>

      </div>
    </div>
  </div>
  <hr>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-md-offset-1">

          <%= link_to 'Edit', edit_admin_book_path(@book), class: 'btn btn-success btnwidth btn-sidebar-success' %>

           <%= link_to 'Delete', admin_book_path(@book), method: :delete, class: 'btn btn-danger btn-sidebar-danger',
                data: { confirm: "Are you sure you want to delete #{@book.title}?"} %>
          </div>
        </div>
  </div>
</section>
